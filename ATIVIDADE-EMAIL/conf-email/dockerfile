FROM ubuntu:20.04

RUN apt update

RUN apt upgrade -y

RUN apt-get install -y postfix nano dnsutils iputils-ping telnet dovecot-common dovecot-imapd dovecot-pop3d 

COPY main.cf /etc/postfix/main.cf

COPY 10-mail.conf /etc/dovecot/conf.d/10-mail.conf

COPY 20-pop3.conf /etc/dovecot/conf.d/20-pop3.conf

COPY dovecot.conf /etc/dovecot/dovecot.conf

# Add User
RUN useradd -c 'vinicius' -m -s /bin/false vinicius

 #Set user passord
RUN echo "vinicius:123456"|chpasswd

RUN useradd -c 'jefferson' -m -s /bin/false jefferson

RUN echo "jefferson:123456"|chpasswd

COPY startservice.sh /shell/startservice.sh

ENTRYPOINT [ "/shell/startservice.sh" ] 
 